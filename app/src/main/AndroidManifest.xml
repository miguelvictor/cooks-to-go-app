<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="team.jcandfriends.cookstogo">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreenActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RecipesActivity"
            android:label="@string/title_activity_recipes" />
        <activity
            android:name=".IngredientsActivity"
            android:label="@string/title_activity_ingredients" />
        <activity
            android:name=".VirtualBasketActivity"
            android:label="@string/title_activity_virtual_basket" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".RecipeSearchActivity"
            android:label="@string/title_activity_recipe_search" />
        <activity
            android:name=".IngredientSearchActivity"
            android:label="@string/title_activity_recipe_search" />
        <activity
            android:name=".RecipeActivity"
            android:label="@string/title_activity_recipe" />
        <activity
            android:name=".IngredientActivity"
            android:label="@string/title_activity_ingredient" />
        <activity
            android:name=".RecommendedRecipesActivity"
            android:label="@string/title_activity_recommended_recipes"
            android:parentActivityName=".VirtualBasketActivity"
            tools:ignore="UnusedAttribute">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="team.jcandfriends.cookstogo.VirtualBasketActivity" />
        </activity>
        <activity
            android:name=".VirtualBasketsActivity"
            android:label="@string/title_activity_virtual_baskets" />
    </application>

</manifest>
